{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "db/*": ["./db/*"]
    }
  },
  "include": ["netlify/**/*.ts", "db/**/*.ts", "drizzle.config.ts"],
  "exclude": ["node_modules", "dist", "server"]
}
